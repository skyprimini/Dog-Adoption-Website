@page "/"

<PageTitle>Index</PageTitle>

<h1>Pawsitively Rescued</h1>

<BlazorStrap.BSCarousel NumberOfItems="1">
    <BSCarouselItem Src="/images/1.png" Alt="Image" style="width:100%; height:500px"></BSCarouselItem>
    <BlazorStrap.BSCarouselControl CarouselDirection="BlazorStrap.CarouselDirection.Previous" />
    <BlazorStrap.BSCarouselControl CarouselDirection="BlazorStrap.CarouselDirection.Next" />
</BlazorStrap.BSCarousel>

<h3>Your pets, Our passion.</h3>

<img src="/images/1.jpg" alt="Adoption Image" style="width:100%; height:auto;" />

<div class="tab">
    <button style="@(tab0? "background-color:#808080;color:bisque;" : "")" @onclick="(x => DisplayTab(0))">Adoption</button>
    <button style="@(tab1? "background-color:#808080;color:bisque;" : "")" @onclick="(x => DisplayTab(1))">Foster</button>
    <button style="@(tab2? "background-color:#808080;color:bisque;" : "")" @onclick="(x => DisplayTab(2))">Volunteer</button>
    <button style="@(tab3? "background-color:#808080;color:bisque;" : "")" @onclick="(x => DisplayTab(3))">Donation</button>
    <button style="@(tab4? "background-color:#808080;color:bisque;" : "")" @onclick="(x => DisplayTab(4))">Contact us</button>
    <button style="@(tab5? "background-color:#808080;color:bisque;" : "")" @onclick="(x => DisplayTab(5))">Account</button>
</div>
  
@if (tab0)
{
    <div class="tabcontent">
        <h3>Adoption Information</h3>
    </div>
}
@if (tab1)
{
    <div class="tabcontent">
        <h3>Foster Information</h3>
    </div>
}

@if (tab2)
{
    <div class="tabcontent">
        <h3>Volunteer Information</h3>
    </div>
}

@if (tab3)
{
    <div class="tabcontent">
        <h3>Donation Information</h3>
    </div>
}

@if (tab4)
{
    <div class="tabcontent">
        <h3>Contact Us</h3>
    </div>
}

@if (tab5)
{
    <div class="tabcontent">
        <h3>Account Settings</h3>
    </div>
}

@code{
    private bool tab0 = true;
    private bool tab1 = false;
    private bool tab2 = false;
    private bool tab3 = false;
    private bool tab4 = false;
    private bool tab5 = false;

    public void DisplayTab(int TabNumber)
    {
        switch (TabNumber)
        {
            case 0:
                tab0 = true;
                tab1 = false;
                tab2 = false;
                tab3 = false;
                tab4 = false;
                tab5 = false;
                break;

            case 1:
                tab0 = false;
                tab1 = true;
                tab2 = false;
                tab3 = false;
                tab4 = false;
                tab5 = false;
                break;

            case 2:
                tab0 = false;
                tab1 = false;
                tab2 = true;
                tab3 = false;
                tab4 = false;
                tab5 = false;
                break;

            case 3:
                tab0 = false;
                tab1 = false;
                tab2 = false;
                tab3 = true;
                tab4 = false;
                tab5 = false;
                break;

            case 4:
                tab0 = false;
                tab1 = false;
                tab2 = false;
                tab3 = false;
                tab4 = true;
                tab5 = false;
                break;

            case 5:
                tab0 = false;
                tab1 = false;
                tab2 = false;
                tab3 = false;
                tab4 = false;
                tab5 = true;
                break;
        }
    }
}